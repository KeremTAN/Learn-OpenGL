{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cmake",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":[
                "createBuildDir"
            ]
        },
        {
            "label": "createBuildDir",
            "type": "shell",
            "command": "mkdir",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-p",
                "build"
            ]
        },
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
                "-l"
            ]
        }
    ]
}